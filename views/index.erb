<table class="table">
  <thead>
    <tr>
      <th class="col-sm-1"></th>
      <th class="col-sm-1"></th>
      <th class="col-sm-3"></th>
      <th class="col-sm-6"></th>
      <th class="col-sm-1"></th>
    </tr>
  </thead>
  <tbody>
  <% @data.each do |event| %>
    <tr>
      <td></dt>
      <td>
        <%= "#{event.month}/#{event.day} (#{event.wday})" %><br>
        <p>
        <a href="<%= event.group_url %>">
        <div style="
width:70px;
height:70px;
border-radius: 400px;
border:1px solid #fff;
box-shadow: 0px 0px 10px #ccc,
inset 0px 0px 10px rgba(0, 0, 0, 0.8);
background: url(<%= event.group_logo %>) center center;
background-repeat: no-repeat;">
        </div>
        <%= event.source %>
      </td>
      <td>
        <img src="<%= event.logo %>" class="shadow" style="width: 250px">
      </td>
      <td>
        <a href="<%= event.event_url %>">
          <h1 style="font-family: 游ゴシック体"><%= event.title %></h1>
        </a>
        <%= event.catch %><br>
        <%= event.place %><br>
        <%= event.address %><br><br>
        <%= "#{event.accepted}/#{event.limit} #{event.limit_over? ? "定員" : "まだいけます"}" %><br>
        <a href="<%= event.group_url %>"><%= event.group_title %></a><br>

        <a href="http://connpass.com/user/<%= event.owner_nickname %>"><%= event.owner_nickname %></a><br>

        <% if @owner_twitter_id %>
        twitter:<a href="http://twitter.com/<%= event.owner_twitter_id %>"><%= event.owner_nickname %></a><br>
        <% end %><br><br>

        <% event.users.each do |user| %>
        <a href="<%= user[:id] %>">
          <img src="<%= user[:image] %>" data-toggle="tooltip" title="<%= user[:name] %>" style="width: 36px; height: 36px; border-radius: 20px;">
        </a>
        <% end %>
        <br>
        <br>
      </td>
      <td></dt>
    </tr>
  <% end %>
  </tbody>
</table>
