<div class="col-md-8 col-xs-12" style="margin-left: 20px">
  <% bday = "" %>
  <% @events.each_with_index do |event, index| %>
    <% day = "#{event.month}/#{event.day}" %>
    <% is_new_day = (bday != day) %>
    <% bday = day %>

    <div class="row" itemscope itemtype="http://schema.org/Event">

      <%# 日付ごとに線を引く %>
      <% if index != 0 && is_new_day %>
        <hr class="style-two">
      <% end %>

      <%# 日付を表示 %>
      <div class="col-md-2 col-xs-1">
        <% if is_new_day %>
          <h2 class="day">
            <%= day %>
            <small><%= "(#{event.wday})" %></small>
          </h2>
        <% end %>
      </div>

      <div class="event col-md-10 col-xs-10">
        <%# 勉強会ごとに線を引く %>
        <% unless is_new_day %>
          <hr class="style-two">
        <% end %>

        <!-- イベント情報 -->
        <div class="event-left col-xs-3" itemprop="startDate" content="<%= "#{event.year}-#{event.month}-#{event.day}" %>">
          <a href="<%= event.event_url %>">
            <p class="resizeimage">
              <%= image_tag(event.logo, class: "event-logo", itemprop: "image") %>
              <br>
            </p>
          </a>

          <div class="event-place">
            <a itemprop="location" itemscope itemtype="http://schema.org/Place" datatoggle="tooltip" title="<%= event.address %>" href="https://maps.google.co.jp/maps?q=<%= event.place_enc %>">
              <span itemprop="name" class="glyphicon glyphicon-map-marker">
                <%= event.place %>
              </span>
              <span class="event-address" itemprop="address">
                <%= event.address %>
              </span>
            </a>
          </div>
        </div>

        <div class="event-right col-xs-9">
          <a itemprop="url" href="<%= event.event_url %>">
            <h3 class="event-title">
              <span itemprop="name"><%= event.title %></span>
              <small> by <%= event.source %></small>
            </h3>
          </a>

          <% if event.group_url %>
            <a href="<%= event.group_url %>">
              <%= image_tag(event.group_logo, class: "group-logo") %>
              <%= event.group_title %>
            </a>
            <br>
          <% end %>

          <div class="event-detail">
            <span itemprop="description">
              <%= raw event.catch %>
            </span>
          </div>

          <div class="event-user">
            <a href="<%= "#{event.twitter_list_url}" %>">
              <%= image_tag("/img/Twitter.png", class: "twitter-icon", datatoggle: "tooltip", title: "ツイッターリスト") %>
            </a>
            <%= render partial: 'owner', collection: event.owners %>
            <%= render partial: 'user', collection: event.users %>
          </div>

        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="col-md-0 col-xs-1">
</div>

<div class="col-md-3 col-xs-10">
  <% twitter_list_url = @events.select { |event| event.participants.size > 0 }.first.twitter_list_url %>
  <a class="twitter-timeline" href="<%= "#{twitter_list_url}/members" %>">Tweets by TwitterDev</a>
  <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
</div>
