<% @events_box.each do |events| %>
  <% if events.present? %>
    <section class="events">
      <header class="events-header">
        <h2 class="events-header__day">
          <time datetime="<%= display_day_format(events.first) %>">
            <%= display_day_format(events.first) %>
          </time>
        </h2>
      </header>
      <div class="events-content">
        <% events.each do |event| %>
          <div class="event">
            <div class="event__logo">
              <%= link_to image_tag(event.logo_url, class: "event__logo-image"), event.event_url, class: "event__logo-link is_external-link", target: "_blank" %>
            </div>
            <%= link_to event.event_url do %>
              <h3 class="event__title is_external-link">
                <%= event.title %>
              </h3>
            <% end %>
            <div class="event-content">
              <div class="event-content__description">
                <%== event.catch.truncate(150) %>
                <%= link_to 'もっと読む', event.event_url, target: "_blank" %>
              </div>
            </div>
            <div class="event-users">
              <ul class="event-users__items">
                <%= render partial: 'events/user-list', collection: event.owners, as: :user, locals: { owner_user: 'owner' } %>
                <li class="event-users__item-count">主催者<%= event.owners.count%>名</li>
              </ul>
              <ul class="event-users__items">
                <%= render partial: 'events/user-list', collection: event.users, as: :user, locals: { owner_user: 'user' } %>
                <li class="event-users__item-count">参加者<%= event.users.count%>名</li>
              </ul>
              <div class="event-users__twitter-list">
                <%= link_to '参加者だけのTwitterリスト', event.twitter_list_url_gsub, class: 'event-users__twitter-list-link', target: '_blank' %>
              </div>
            </div>
            <% if event.group_url.present? %>
              <%= link_to "/group/#{event.group_title}" do %>
                <div class="event-group">
                  <div class="event-group__logo">
                    <%= image_tag event.group_logo_url, class: 'event-group__logo-image' %>
                  </div>
                  <h4 class="event-group__title">
                    <%= event.group_title %>
                  </h4>
                </div>
              <% end %>
            <% end %>
            <div class="event-supplement">
              <address class="event-supplement__place"><%= event.source %></address>
              <span class="event-supplement__map">
                <%= link_to event.place, link_to_google_map(event.place_enc), class: "event-supplement__map-link" %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  <% end %>
<% end %>
