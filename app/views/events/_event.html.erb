<% @events_box.each do |events| %>
  <section class="events">
    <header class="events-header">
      <h2>
        <time class="events-header__day" datetime="<%= display_day_format(events.first) %>">
          <%= display_day_format(events.first) %>
        </time>
      </h2>
    </header>
    <div class="events-content">
      <% events.each do |event| %>
        <div class="event">
          <div class="event__logo">
            <%= link_to image_tag(event.logo_url, class: "event__logo-image"), event.event_url, class: "event__logo-link is_external-link", target: "_blank" %>
          </div>
          <h3 class="event__title">
            <%= event.title %>
          </h3>
          <div class="event-detail">
            <div class="event-detail__description">
              <%= truncate(event.catch, length: 250) do %>
                <%= link_to 'もっと読む', event.event_url, target: "_blank" %>
              <% end %>
            </div>
            <div class="event-supplement">
              <address class="event-supplement__place"><%= event.source %></address>
              <span class="event-supplement__map">
                <%= link_to event.place, link_to_google_map(event.place_enc), class: "event-supplement__map-link is_external-link" %>
              </span>
            </div>
          </div>
          <div class="event-users">
            <ul class="event-users__items">
              <%= render partial: 'events/user-list', collection: event.owners, as: :user, locals: { owner_user: 'owner' } %>
              <%= render partial: 'events/user-list', collection: event.users, as: :user, locals: { owner_user: 'user' } %>
            </ul>
            <%= link_to '参加者だけのTwitterリスト', event.twitter_list_url_gsub, class: 'event-users__twitter-list', target: '_blank' %>
          </div>
          <% if event.group_url.present? %>
            <div class="event-group">
              <%= link_to "/group/#{event.group_title}" do %>
                <%= image_tag event.group_logo_url, class: 'event-group__logo' %>
                <span class="event-group__title">
                  <%= event.group_title %>
                </span>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>
<% end %>
