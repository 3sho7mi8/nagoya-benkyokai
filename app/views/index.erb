<div class="row" class="col-md-12 col-xs-12">
  <div class="col-md-8 col-xs-12" style="margin-left: 20px">
    <%= bday = "" %>
    <% @data.each do |event| %>
    <% day = "#{event.month}/#{event.day}" %>
    <div class="row" itemscope itemtype="http://schema.org/Event">
      <% if bday != day %>
      <hr class="style-two">
      <% end %>
      <div class="col-md-2 col-xs-1">
        <% if bday != day %>
        <h2 class="day">
          <%= day %>
          <small><%= "(#{event.wday})" %></small>
        </h2>
        <% end %>
      </div>
      <div class="col-md-10 col-xs-10">
        <% if bday == day %>
        <hr class="style-two">
        <% else %>
        <% bday = day %>
        <% end %>

        <!-- イベント情報 -->
        <div class="event-left col-xs-2" itemprop="startDate" content="<%= "#{event.year}-#{event.month}-#{event.day}" %>">
          <a href="<%= event.event_url %>">
            <p class="resizeimage">
              <img itemprop="image" class="event-logo shadow" src="<%= event.logo %>" style="  object-fit: contain; width: 110px; height: 100px;"><br>
            </p>
          </a>
          <div class="event-place">
            <a itemprop="location" itemscope itemtype="http://schema.org/Place" data-toggle="tooltip" title="<%= event.address %>" href="https://maps.google.co.jp/maps?q=<%= event.place_enc %>">
              <span itemprop="name" class="glyphicon glyphicon-map-marker">
                <%= event.place %>
              </span>
              <span itemprop="address" style="display:none">
                <%= event.address %>
              </span>
            </a>
          </div>
        </div>
        <div class="event-right col-xs-10">
          <a itemprop="url" href="<%= event.event_url %>">
            <h3 class="event-title">
              <span itemprop="name"><%= event.title %></span> <small>by <%= event.source %></small>
            </h3>
          </a>
          <% if event.group_url %>
          <a href="<%= event.group_url %>">
            <img class="group-logo" src="<%= event.group_logo %>">
            <%= event.group_title %>
          </a>
          <br>
          <% end %>
          <div class="event-detail">
            <span itemprop="description">
              <%= event.catch %>
            </span>
          </div>
        </div>
        <div class="event-user col-xs-12">
          <div style="background-color: #EEEEEE; border-radius: 5px;">
            <div style="padding-left: 10px; padding-top: 5px; padding-bottom: 5px;">
            <a href="<%= "https://twitter.com/nagoya_lambda/lists/nagoya-#{event.event_id}" %>">
              <img class="twitter-icon" src="/img/Twitter.png" data-toggle="tooltip" title="ツイッターリスト" style="margin-right: 2px; margin-bottom: 2px">
            </a>
            <% event.owners.each do |user| %>
              <% if !user[:twitter_id].empty?  %>
            <a class="clickable" href="<%= "https://twitter.com/#{user[:twitter_id]}" %>">
              <% end %>
              <img class="owner-icon" src="<%= user[:image] %>" data-toggle="tooltip" title="管理者：<%= user[:name] %>" style="margin-right: 2px; margin-bottom: 2px">
              <% if !user[:twitter_id].empty?  %>
            </a>
              <% end %>
            <% end %>
            <% event.users.each do |user| %>
              <% if !user[:twitter_id].empty?  %>
            <a class="clickable" href="<%= "https://twitter.com/#{user[:twitter_id]}" %>">
              <% end %>
              <img class="user-icon" src="<%= user[:image] %>" data-toggle="tooltip" title="参加者：<%= user[:name] %>" style="margin-right: 2px; margin-bottom: 2px">
              <% if !user[:twitter_id].empty?  %>
            </a>
              <% end %>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="col-md-3 col-xs-0">
  <a class="twitter-timeline" href="https://twitter.com/nagoya_lambda/lists/nagoya-39118/members">Tweets by TwitterDev</a> <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
  </div>
  <div class="col-md-! col-xs-0">
  </div>
</div>
