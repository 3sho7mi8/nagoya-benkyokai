<%= bday = "" %>
<% @data.each do |event| %>
<% day = "#{event.month}/#{event.day}" %>
<div class="row">
  <% if bday != day %>
  <hr class="wave">
  <% end %>
  <div class="col-md-2 col-xs-11 col-xs-offset-1">
    <% if bday != day %>
    <h1 class="day">
      <%= day %>
      <small><%= "(#{event.wday})" %></small>
    </h1>
    <% end %>
  </div>
  <div class="col-md-6 col-xs-10 col-md-offset-0 col-xs-offset-1">
    <% if bday == day %>
    <hr class="style-three">
    <% else %>
    <% bday = day %>
    <% end %>

    <!-- イベント情報 -->
    <div class="row">
      <div class="event-left col-xs-3">
        <a href="<%= event.event_url %>">
          <p class="resizeimage">
            <img class="event-logo shadow" src="<%= event.logo %>"><br>
          </p>
        </a>
        <div class="event-place">
          <a data-toggle="tooltip" title="<%= event.address %>" href="https://maps.google.co.jp/maps?q=<%= event.place_enc %>">
            <span class="glyphicon glyphicon-map-marker">
            <%= event.place %>
            </span>
          </a>
        </div>
      </div>
      <div class="event-right col-xs-9">
        <a href="<%= event.event_url %>">
          <h3 class="event-title"><%= event.title %></h3>
        </a>
        <% if event.group_url %>
        <a href="<%= event.group_url %>">
          <img class="group-logo" src="<%= event.group_logo %>">
          <%= event.group_title %>
        </a>
        <br>
        <% end %>
        <div class="event-detail">
          <%= event.catch %>
        </div>
      </div>
      <div class="event-user col-xs-12">
        <% event.users.each do |user| %>
        <a href="<%= user[:id] %>">
          <img class="user-icon" src="<%= user[:image] %>" data-toggle="tooltip" title="<%= user[:name] %>">
        </a>
        <% end %>
        <div class="user-limit">
          <h3 style="margin-top: 10px">
            <p><%= "#{event.accepted}" %></p>
            <% if event.limit != 0 %>
            <p><%= "/ #{event.limit}" %></p>
            <% end %>
            <p><small>人</small></p>
          </h3>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xs-3"></div>
</div>
<% end %>
